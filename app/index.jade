doctype html
html(lang="en", ng-app="torstatApp")
  head
    // Required meta tags always come first
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    // Bootstrap CSS
    link(rel="stylesheet", href="components/bootstrap/dist/css/bootstrap.css")
    link(rel="stylesheet", href="css/app.css")
    // Flags css
    link(rel="stylesheet", href="components/flag-icon-css/css/flag-icon.min.css")
    // Icons css
    link(rel="stylesheet", href="components/octicons/octicons/octicons.css")
    // Angular js
    script(src="components/angular/angular.js")
    script(src="components/angular-route/angular-route.js")
    script(src="components/angular-resource/angular-resource.js")
    script(src="components/angular-poller/angular-poller.js")
    script(src="components/angular-websocket/angular-websocket.js")
    script(src="js/app.js")
    script(src="js/filters.js")
    script(src="js/controllers.js")
    script(src="js/services.js")

    title Torweb
  body
    #footerpusher
      header
        .container
          nav.navbar.navbar-dark.bg-inverse
            a.navbar-brand(href="#/") Torweb
            // currently broken 
              ul.nav.navbar-nav
                li.nav-item
                  a.nav-link(href="#/{{tor.id}}/circuits")
                    | Circuits
                    span.sr-only
                li.nav-item
                  a.nav-link(href="#/{{tor.id}}/streams")
                    | Streams
                    span.sr-only
        .container
          ol.breadcrumb
            li(ng-repeat="crumb in breadcrumbs", class="{{crumb.class}}")
              a(href="#{{crumb.url}}", ng-if="!crumb.active") {{crumb.name}}
              span(ng-if="crumb.active") {{crumb.name}}

          //
            form.form-inline.navbar-form.pull-right
              input.form-control(type="text", placeholder="Search")
              button.btn.btn-success-outline(type="submit") Search

      main.container(ng-view="")
      .container(ng-controller="UpdateCtrl")
        h2 Logs
        .responsive-table
          table.table.table-striped
            thead
              tr
                th Time
                th Message
            tbody.logcontainer
              tr(ng-repeat="log in Logs")
                td {{log.time | date:"medium"}}
                td {{log.message}}
    footer.text-muted
      .container
        ul
          li
            a(href="#/about") About
          li
            a(title="Show the source or help improving it!", href="https://github.com/coffeemakr/torweb", target="_blank") Github
          li
            a(title="You've found a problem? Report it!", href="https://github.com/coffeemakr/torweb/issue/new", target="_blank") Report an issue
        p Made with love by the Github community.   
    // jQuery first, then Bootstrap JS.
    script(src="components/jquery/dist/jquery.min.js")
    script(src="components/bootstrap/dist/js/bootstrap.js")
